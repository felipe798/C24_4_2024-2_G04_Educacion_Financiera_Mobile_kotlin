package com.principe.felipe.finango_d1.ui

import android.content.Intent
import android.os.Bundle
import androidx.appcompat.app.AppCompatActivity
import com.principe.felipe.finango_d1.R
import kotlinx.android.synthetic.main.activity_banks.*

class BanksActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_banks)

        imgBcp.setOnClickListener {
            val intent = Intent(this, CardsActivity::class.java)
            intent.putExtra("bankName", "BCP")
            startActivity(intent)
        }

        imgScotiabank.setOnClickListener {
            val intent = Intent(this, CardsActivity::class.java)
            intent.putExtra("bankName", "Scotiabank")
            startActivity(intent)
        }
    }
}
